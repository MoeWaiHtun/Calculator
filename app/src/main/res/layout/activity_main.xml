<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#CFE2CE"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/damion"
        android:text="Calculator"
        android:textColor="#012C03"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:textSize="22sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etCalculator"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvOperation"
        android:layout_marginBottom="16dp"
        android:gravity="end|center_vertical"
        android:text="0"
        android:fontFamily="@font/damion"
        android:textColor="#012C03"
        android:background="@drawable/bg_edittext"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/tvOperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCalculator"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/damion"
        android:layout_marginEnd="20dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/tvOperator"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="4"
        android:useDefaultMargins="true"/>


    <GridLayout
        android:layout_below="@id/tvOperator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:columnCount="4"
        android:rowCount="4"
        android:useDefaultMargins="true"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="1"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="2"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt3"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="3"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onOperatorClicked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btAdd"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button_operator"
            android:text="+"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt4"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="4"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt5"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="5"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt6"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="6"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onOperatorClicked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btSub"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button_operator"
            android:text="-"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt7"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="7"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt8"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="8"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt9"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="9"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onOperatorClicked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btMul"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button_operator"
            android:text="*"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="clear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btClear"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button_clear"
            android:text="C"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onNumberClick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bgshape"
            android:fontFamily="@font/mouse_memoirs"
            android:text="0"
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onOperatorClicked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btEqu"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button_operator"
            android:text="="
            android:textColor="#FFF"
            android:textSize="28sp" />
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="onOperatorClicked"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/btDiv"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:background="@drawable/bg_button_operator"
            android:text="/"
            android:textColor="#FFF"
            android:textSize="28sp" />

    </GridLayout>

</RelativeLayout>